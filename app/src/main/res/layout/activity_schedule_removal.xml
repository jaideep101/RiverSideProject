<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activities.LoginActivity">

    <include
        android:id="@+id/header_layout"
        layout="@layout/header_layout" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:focusableInTouchMode="true"
        android:layout_below="@id/header_layout"
        android:paddingLeft="20dp"
        android:paddingTop="20dp"
        android:paddingRight="20dp"
        android:paddingBottom="20dp">

        <TextView
            android:id="@+id/top_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="#1 - Call Truck"
            android:textAlignment="center"
            android:layout_marginTop="10dp"
            android:textColor="@android:color/black"
            android:textSize="20dp"/>

        <Spinner
            android:id="@+id/patient_setup_city_array"
            android:layout_width="match_parent"
            android:layout_below="@id/top_text_view"
            android:layout_height="60dp"
            android:entries="@array/patient_name_arrays"
            android:layout_marginTop="5dp"/>

        <TextView
            android:id="@+id/medium_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/patient_setup_city_array"
            android:text="You can change the below location of deceased"
            android:textAlignment="center"
            android:layout_marginTop="10dp"
            android:textSize="16dp"/>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/account_info_first_name_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_below="@id/medium_text_view"
            android:hint="@string/hint_location_deceased">

            <EditText
                android:id="@+id/account_info_first_name_edittext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textEmailAddress"
                android:singleLine="true" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/account_info_last_name_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/account_info_first_name_layout"
            android:layout_marginTop="10dp"
            android:hint="@string/hint_time_death">

            <EditText
                android:id="@+id/account_info_last_name_edittext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textEmailAddress"
                android:singleLine="true" />
        </android.support.design.widget.TextInputLayout>

        <TextView
            android:id="@+id/bottom_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/account_info_last_name_layout"
            android:text="Text message confirmation to:"
            android:textAlignment="center"
            android:layout_marginTop="10dp"
            android:textColor="@android:color/black"
            android:textSize="20dp"/>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/account_info_phone_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/bottom_text_view"
            android:layout_marginTop="10dp"
            android:hint="@string/hint_phone_number">

            <EditText
                android:id="@+id/account_info_phone_edittext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textEmailAddress"
                android:singleLine="true" />
        </android.support.design.widget.TextInputLayout>

        <Button
            android:id="@+id/account_info_button"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/account_info_phone_layout"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:background="@color/blue_dark"
            android:gravity="center"
            android:minWidth="0dp"
            android:minHeight="0dp"
            android:padding="8dp"
            android:text="Driver Location"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:textSize="16dp" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/blue_light">

        <Button
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:background="@color/blue_dark"
            android:minWidth="0dp"
            android:minHeight="0dp"
            android:paddingLeft="20dp"
            android:paddingTop="8dp"
            android:paddingRight="20dp"
            android:paddingBottom="8dp"
            android:text="Back"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:textSize="16dp" />

        <Button
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="5dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="5dp"
            android:background="@color/blue_dark"
            android:minWidth="0dp"
            android:minHeight="0dp"
            android:paddingLeft="20dp"
            android:paddingTop="8dp"
            android:paddingRight="20dp"
            android:paddingBottom="8dp"
            android:text="Submit"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:textSize="16dp" />
    </RelativeLayout>
</RelativeLayout>
