<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activities.LoginActivity">
    <include
        android:id="@+id/header_layout"
        layout="@layout/header_layout" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:focusableInTouchMode="true"
        android:paddingLeft="20dp"
        android:paddingRight="20dp">

        <ImageView
            android:id="@+id/driver_dashboard_chat_imageview"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:scaleType="fitXY"
            android:src="@drawable/dashboard_chat"/>

        <ImageView
            android:id="@+id/driver_dashboard_lookup_nurse_imageview"
            android:layout_below="@id/driver_dashboard_chat_imageview"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginTop="15dp"
            android:scaleType="fitXY"
            android:src="@drawable/dashboard_lookup_nurse"/>

        <ImageView
            android:id="@+id/driver_dashboard_pending_pickup_imageview"
            android:layout_below="@id/driver_dashboard_lookup_nurse_imageview"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginTop="15dp"
            android:scaleType="fitXY"
            android:src="@drawable/dashboard_pending_pickups"/>

        <ImageView
            android:id="@+id/driver_dashboard_complete_pickup_imageview"
            android:layout_below="@id/driver_dashboard_pending_pickup_imageview"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginTop="15dp"
            android:scaleType="fitXY"
            android:src="@drawable/dashboard_completed_pickups"/>

        <ImageView
            android:id="@+id/driver_dashboard_contact_us_imageview"
            android:layout_below="@id/driver_dashboard_complete_pickup_imageview"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginTop="15dp"
            android:scaleType="fitXY"
            android:src="@drawable/dashboard_contact_us"/>
    </RelativeLayout>

</LinearLayout>
